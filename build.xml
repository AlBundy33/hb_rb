<project name="Handbrake" default="all" basedir=".">

<target name="all" depends="clean,build,build-complete" />

<target name="build" depends="clean">
	<zip destfile="build/handbrake.zip">
		<fileset dir=".">
			<exclude name="**/.svn" />
			<include name="tools/handbrake/" />
			<exclude name="tools/handbrake/windows/**/*"/>
			<exclude name="tools/handbrake/osx/**/*"/>
			<exclude name="tools/handbrake/linux/**/*"/>
			<include name="lib/tools.rb" />
			<include name="hb.rb" />
		</fileset>
	</zip>    
</target>

<target name="build-complete" depends="clean">
	<zip destfile="build/handbrake-complete.zip">
		<fileset dir=".">
			<exclude name="**/.svn" />
			<include name="tools/handbrake/" />
			<include name="lib/tools.rb" />
			<include name="hb.rb" />
		</fileset>
	</zip>    
</target>

<target name="clean">
	<delete>
		<fileset dir=".">
			<include name="build/**/*"/>
		</fileset>
	</delete>
</target>

</project>